{% block styles %}
    <link rel="stylesheet" href="{{ url_for('static', filename='css/index.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block content %}

<div class="initial">
      <div class ='jumbotron'><center><h4>Form Submitted!</h4></center></div>
      <h3 class="welcometo">Choose Your Form With Signature Here At</h3>
      <h1 id="heading">EForm</h1>
    </div>
    <br />
    <br /><br /><br /><br /><br />

    <div
      style="
        color: #ddd;
        background-color: #282e34;
        text-align: center;
        padding: 50px 80px;
        text-align: justify;
      "
